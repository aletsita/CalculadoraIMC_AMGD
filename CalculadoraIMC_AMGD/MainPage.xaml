<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraIMC_AMGD.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Calcular IMC" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry Placeholder="Peso (kg)" x:Name="Peso" Keyboard="Numeric" />
        <Entry Placeholder="Altura (m)" x:Name="Altura" Keyboard="Numeric"/>
        <Button Text="Calcular" Clicked="Button_Clicked"/>
            <Label x:Name="MostrarIMC" Text="IMC: " FontSize="Large" TextColor="Black"/>
        <Label x:Name="EstadoIMC" Text="Estado: " FontSize="Large" TextColor="Black"/>
    </StackLayout>

</ContentPage>
